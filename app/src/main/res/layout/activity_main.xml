<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.miles.fitness4u.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="36dp">

        <EditText
            android:id="@+id/useremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="21dp"
            android:gravity="center"
            android:hint="Registration"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            />
        <EditText
            android:id="@+id/nameReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:layout_below="@id/useremail"
            android:hint="Name" />

        <EditText
            android:id="@+id/ageReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nameReg"
            android:layout_marginTop="9dp"
            android:hint="Age" />

        <EditText
            android:id="@+id/heightReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ageReg"
            android:layout_centerHorizontal="true"
            android:hint="Height" />

        <EditText
            android:id="@+id/weightReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/heightReg"
            android:layout_centerVertical="true"
            android:hint="Weight" />

        <EditText
            android:id="@+id/sexReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weightReg"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="56dp"
            android:hint="Sex" />



        <EditText
            android:id="@+id/passwordReg"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailReg"
            android:layout_centerHorizontal="true"
            android:focusableInTouchMode="true"
            android:hint="@string/prompt_password"
            android:imeActionId="@+id/login"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="125dp" />

    </RelativeLayout>

    <!--<ProgressBar
    android:id="@+id/progressBar"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:visibility="gone"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp" /> -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/regButton"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/change_password_button"
        android:layout_alignLeft="@+id/changePass"
        android:layout_alignStart="@+id/changePass"
        android:text="Register" />


    <Button
        android:id="@+id/sign_out"
        style="?android:textAppearanceSmall"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/change_password_button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/change_password_button"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:background="@color/colorPrimary"
        android:text="@string/btn_sign_out"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="456dp" />

    </RelativeLayout>


</RelativeLayout>
