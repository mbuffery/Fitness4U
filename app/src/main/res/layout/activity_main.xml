    android:layout_above="@+id/sign_out"
    android:layout_alignStart="@+id/sign_out"
    android:layout_alignLeft="@+id/sign_out" />-->

    <Button
        android:id="@+id/sign_out"
        style="?android:textAppearanceSmall"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/change_password_button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/change_password_button"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:background="@color/colorPrimary"
        android:text="@string/btn_sign_out"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="456dp" />

    <EditText
        android:id="@+id/sexReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="56dp"
        android:hint="Sex" />

    <EditText
        android:id="@+id/heightReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password"
        android:layout_centerHorizontal="true"
        android:hint="Height" />


</RelativeLayout>
